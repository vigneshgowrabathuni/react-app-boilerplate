    "babel-loader": "^8.0.6",
    "bundlesize": "^0.18.0",
    "css-loader": "^3.4.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.17.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "node-sass": "^4.13.0",
    "react-hot-loader": "^4.12.18",
    "sass": "^1.24.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.1.1",
    "stylelint": "^12.0.0",
    "webpack": "^4.41.4",
